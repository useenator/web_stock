{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div>
            <a class="btn btn-warning" href="{{ path('add_supplier') }}">Add Supplier</a>

            <h3>Suppliers list</h3>

            {#*********** table *********#}
            <table class="table">
                <tr>

                    <th>Supplier name</th>
                    <th>CreatedAtDate</th>
                </tr>

                {% for supplier in suppliers %}
                    <tr>
                        <td>
                            <a href="{{ path('supplierDetails', {supplier_id: supplier.id}) }}"> {{ supplier.supplierName }}</a>
                        </td>
                        <td> {{ supplier.createdAtDate | date }}</td>
                        <td><a href="{{ path('supplierDetails', {supplier_id: supplier.id}) }}">LINK</a></td>
                        <td>
                            <a class="btn btn-xs btn-info"
                               href="{{ path('update_supplier', {supplier_id: supplier.id}) }}">Edit</a>
                        </td>
                        <td><a class="btn btn-xs  btn-danger"
                               href="{{ path('delete_supplier', {supplier_id: supplier.id}) }}">Delete</a></td>


                        <td>
                            {#*******************nested table*****************************#}
                            {#************************** table product by supplier ***********************************#}
                            {% set products =supplier.products %}
                            {% include 'table_products_by_supplier.html.twig' %}
                            {#************************** End table product by supplier *******************************#}
                            {#*******************End nested table*************************#}


                        </td>
                    </tr>

                {% endfor %}

            </table>
            {#********** end table **********#}
        </div>

        <div>
            <ul>

                {% for supplier in suppliers %}
                    </br>
                    Supplier name : {{ supplier.supplierName }}
                    <a href="{{ path('supplierDetails', {supplier_id: supplier.id}) }}">LINK</a>
                    <a href="{{ path('update_supplier', {supplier_id: supplier.id}) }}">Edit</a>
                    <a href="{{ path('delete_supplier', {supplier_id: supplier.id}) }}">Delete</a>

                    <h6>Products :</h6>
                    <ul>
                        {% for p in supplier.products %}
                            <li>{{ p.productName }}</li>
                        {% endfor %}

                    </ul>
                    {#<a href="{{ path('update_product', {product_id: product.id}) }}">Edit</a>#}
                    {#<a href="{{ path('delete_product', {product_id: product.id}) }}">Delete</a></br>#}
