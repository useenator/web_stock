                    {#Date : {{ product.createdAtDate | date }}</br>#}
                    {#Product Features :</br>#}
                    {#<ul>#}
                    {#{% for f in product.features%}#}
                    {#<li>{{ f.featureName}} </li>#}
                    {#{% endfor %}#}

                    {#</ul>#}

                {% endfor %}

            </ul>
        </div>
    </div>

{% endblock %}

